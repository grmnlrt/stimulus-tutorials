<div class="container mt-5">
  <div class="row">
    <div class="col">
      <%= form_with url: movies_path, method: :get, html: { class: 'mb-5'} do |f| %>
        <%= f.text_field :query, class: "form-control", placeholder: 'Type a movie title', value: params[:query] %>
      <% end %>
      <% if params[:query].blank? %>
        <h1 class="h3"><%= pluralize @movies.count, 'movie' %> available</h1>
      <% else %>
        <h1 class="h3"><%= pluralize @movies.count, 'result' %> for <%= params[:query] %></h1>
      <% end %>
      <div class="movies">
        <% @movies.each do |movie| %>
          <div class="movie-card">
            <%= image_tag movie.image_url %>
            <h2><%= movie.title %> <small>(<%= movie.year %>)</small></h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
